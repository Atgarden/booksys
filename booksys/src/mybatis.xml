<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	<settings>
		<!-- 启用懒加载，如下两个配置必须写 -->
		<setting name="lazyLoadingEnabled" value="true" />
		<setting name="aggressiveLazyLoading" value="false" />

		<!-- 开启二级缓存 -->
		<!-- <setting name="cacheEnabled" value="true"/> -->
	</settings>

	<!-- 设置类型的别名 -->
	<typeAliases>
		<typeAlias type="com.booksys.entity.User" alias="user" />
		<typeAlias type="com.booksys.entity.Books" alias="books" />
		<typeAlias type="com.booksys.entity.Orders" alias="orders" />
		<typeAlias type="com.booksys.entity.OrderItem" alias="item" />
		<typeAlias type="com.booksys.entity.Admin" alias="admin" />
	</typeAliases>

	<mappers>

	</mappers>
</configuration>


